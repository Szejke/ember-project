<div class="{{this.contentRepo}}">


    <LinkTo class="{{this.repo}}" @route='repo' @model={{concat @ownerLogin ':' @repoId }}>
        <div class="{{this.imageArea}}">
            <Atoms::Awatar::Awatar @repoAvatarUrl={{@repoAvatarUrl}} />
        </div>
        <div class="{{this.repoInfoArea}}">
            <Atoms::Paragraphs::Header @text={{@repoName}} />
            <Atoms::Paragraphs::DefaultText @text={{this.ownerLogin}} />
            <Atoms::Paragraphs::DefaultText @text={{this.description}} />
        </div>
        <div class={{this.styledInformation}}>
            More Informacion
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                class="bi bi-chevron-double-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M1.646 6.646a.5.5 0 0 1 .708 0L8 12.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                <path fill-rule="evenodd"
                    d="M1.646 2.646a.5.5 0 0 1 .708 0L8 8.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
            </svg>
        </div>
    </LinkTo>
</div>