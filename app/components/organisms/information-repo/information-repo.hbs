<main class="container mt-5">
    <h1>Repository information</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">
                Home
            </LinkTo>
        </li>
        <li class="breadcrumb-item">{{this.repo.full_name}}</li>
    </ol>

    <div>
        <Atoms::Awatar::Awatar @repoAvatarUrl={{this.repo.owner.avatar_url}} />
        <h1>Owner: {{this.repo.owner.login}}</h1>
        <h6>ID Repo: {{this.repo.id}}</h6>
        {{this.idRepo}}
    </div>
    <Atoms::Paragraphs::Header @text={{'Information About Branchs'}} />
    {{#each this.branches as |branche|}}
    <div class={{this.styleBrancheInformation}}>
        <div class={{this.styleBrancheName}}>
            <Atoms::Paragraphs::DefaultText @text={{concat "Name" ': ' branche.name}} />
        </div>
        <Atoms::Paragraphs::DefaultText @text={{concat "Sha" ': ' branche.commit.sha}} />
        <a href={{branche.commit.url}}>{{concat "url" ': ' branche.commit.url}}</a>
    </div>
    {{/each}}
</main>